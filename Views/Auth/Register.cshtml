@using Philharmonic.Models
@model Register

<div class="container">
    <form asp-action="Register" asp-controller="Auth">
        <div class="mb-3">
            <label asp-for="name" class="form-label"></label>
            <input asp-for="name" type="text" class="form-control">
            <span class="text-danger" asp-validation-for="name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="password" class="form-label"></label>
            <input asp-for="password" type="password" class="form-control">
            <span class="text-danger" asp-validation-for="password"></span>
        </div>
        <div class="mb-3">
            <label asp-for="confirmPassword" class="form-label"></label>
            <input asp-for="confirmPassword" type="password" class="form-control">
            <span class="text-danger" asp-validation-for="confirmPassword"></span>
        </div>
        <div class="mb-3">
            <label asp-for="firstDate" class="form-label"></label>
            <input asp-for="firstDate" type="date" class="form-control">
            <span class="text-danger" asp-validation-for="firstDate"></span>
        </div>
        <div class="mb-3">
            <label asp-for="secondDate" class="form-label"></label>
            <input asp-for="secondDate" type="date" class="form-control">
            <span class="text-danger" asp-validation-for="secondDate"></span>
        </div>
        <div class="mb-3 form-check">
            <input asp-for="currentDate" type="checkbox" class="form-check-input">
            <label asp-for="currentDate" class="form-check-label"></label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

